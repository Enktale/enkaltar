$C = "../Common.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 520, Height: 260);

  #Content {
    LayoutMode: Top;
    Padding: (Full: 18);

    $C.@SecondaryTextButton #BackButtonTop {
      Text: "";
      Anchor: (Width: 80, Height: 26);
      Padding: (Bottom: 6);
    }

    Label #TitleText {
      Style: (
        FontSize: 18,
        RenderBold: true,
        TextColor: #ffffff,
        HorizontalAlignment: Center
      );
      Anchor: (Height: 28);
      Padding: (Bottom: 8);
    }

    Label #ProductNameText {
      Style: (FontSize: 13, RenderBold: true, TextColor: #ffffff, HorizontalAlignment: Center);
      Padding: (Bottom: 6);
    }

    Label #DescriptionText {
      Style: (FontSize: 12, TextColor: #bfcdd5, HorizontalAlignment: Center, Wrap: true);
      Padding: (Bottom: 8);
    }

    Label #PriceText {
      Style: (FontSize: 12, TextColor: #bfcdd5, HorizontalAlignment: Center);
      Padding: (Bottom: 12);
    }

    $C.@SecondaryTextButton #PurchaseButton {
      Text: "";
      Anchor: (Height: 36);
    }
  }
}

$C.@BackButton {}
