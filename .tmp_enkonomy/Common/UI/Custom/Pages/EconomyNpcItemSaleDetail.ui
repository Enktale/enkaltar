$C = "../Common.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 520, Height: 320);

  #Content {
    LayoutMode: Top;
    Padding: (Full: 18);

    $C.@SecondaryTextButton #BackButtonTop {
      Text: "";
      Anchor: (Width: 80, Height: 26);
      Padding: (Bottom: 6);
    }

    Label #TitleText {
      Style: (
        FontSize: 18,
        RenderBold: true,
        TextColor: #ffffff,
        HorizontalAlignment: Center
      );
      Anchor: (Height: 28);
      Padding: (Bottom: 8);
    }

    Group {
      Anchor: (Height: 80);
      LayoutMode: Center;
      Padding: (Bottom: 6);

      ItemGrid #ItemIcon {
        SlotsPerRow: 1;
        RenderItemQualityBackground: false;
        AreItemsDraggable: false;
        InfoDisplay: None;
        Style: (
          SlotSize: 64,
          SlotSpacing: 0,
          SlotIconSize: 64
        );
      }
    }

    Label #PriceText {
      Style: (FontSize: 12, TextColor: #bfcdd5, HorizontalAlignment: Center);
      Padding: (Bottom: 6);
    }

    Label #StockText {
      Style: (FontSize: 12, TextColor: #bfcdd5, HorizontalAlignment: Center);
      Padding: (Bottom: 12);
    }

    Group {
      LayoutMode: Left;
      Anchor: (Height: 34);
      Padding: (Bottom: 12);

      $C.@SecondaryTextButton #MinusButton { Text: ""; Anchor: (Width: 36, Height: 28); }
      Label { Anchor: (Width: 10); }
      Label #QuantityText { Style: (FontSize: 12, TextColor: #ffffff); Anchor: (Width: 80, Height: 28); }
      Label { Anchor: (Width: 10); }
      $C.@SecondaryTextButton #PlusButton { Text: ""; Anchor: (Width: 36, Height: 28); }
    }

    $C.@SecondaryTextButton #PurchaseButton {
      Text: "";
      Anchor: (Height: 36);
    }
  }
}

$C.@BackButton {}
