$C = "../Common.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 520, Height: 280);

  #Content {
    LayoutMode: Top;
    Padding: (Full: 18);

    Label #TitleText {
      Style: (
        FontSize: 18,
        RenderBold: true,
        TextColor: #ffffff,
        HorizontalAlignment: Center
      );
      Anchor: (Height: 28);
      Padding: (Bottom: 8);
    }

    Label #ItemText {
      Style: (
        FontSize: 16,
        TextColor: #ffffff,
        HorizontalAlignment: Center
      );
      Padding: (Bottom: 6);
    }

    Label #DisplayItemText {
      Style: (
        FontSize: 12,
        TextColor: #bfcdd5,
        HorizontalAlignment: Center
      );
      Padding: (Bottom: 10);
    }

    Label #PriceText {
      Style: (
        FontSize: 14,
        TextColor: #bfcdd5,
        HorizontalAlignment: Center
      );
      Padding: (Bottom: 16);
    }

    $C.@SecondaryTextButton #PurchaseButton {
      Text: "";
      Anchor: (Height: 36);
    }
  }
}

$C.@BackButton {}
