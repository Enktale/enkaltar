$C = "../Common.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 520, Height: 260);

  #Content {
    LayoutMode: Top;
    Padding: (Full: 18);

    Label #TitleText {
      Style: (
        FontSize: 18,
        RenderBold: true,
        TextColor: #ffffff,
        HorizontalAlignment: Center
      );
      Anchor: (Height: 28);
      Padding: (Bottom: 8);
    }

    Label #BodyText {
      Style: (
        FontSize: 18,
        TextColor: #bfcdd5,
        HorizontalAlignment: Center
      );
      Anchor: (Top: 20);
    }
  }
}

$C.@BackButton {}
