$C = "../Common.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 520, Height: 360);

  #Content {
    LayoutMode: Top;
    Padding: (Full: 18);

    $C.@SecondaryTextButton #BackButtonTop {
      Text: "";
      Anchor: (Width: 80, Height: 26);
      Padding: (Bottom: 6);
    }

    Label #TitleText {
      Style: (
        FontSize: 18,
        RenderBold: true,
        TextColor: #ffffff,
        HorizontalAlignment: Center
      );
      Anchor: (Height: 28);
      Padding: (Bottom: 8);
    }

    Label #ItemText {
      Style: (
        FontSize: 12,
        TextColor: #bfcdd5
      );
      Padding: (Bottom: 10);
    }

    Group {
      LayoutMode: Left;
      Anchor: (Height: 34);
      Padding: (Bottom: 8);

      Label #PriceLabel {
        Anchor: (Width: 160);
        Style: (FontSize: 12, TextColor: #ffffff);
      }

      $C.@TextField #PriceInput {
        FlexWeight: 1;
        Anchor: (Left: 10, Height: 28);
      }
    }

    Group {
      LayoutMode: Left;
      Anchor: (Height: 34);
      Padding: (Bottom: 12);

      Label #QtyLabel {
        Anchor: (Width: 160);
        Style: (FontSize: 12, TextColor: #ffffff);
      }

      $C.@TextField #QtyInput {
        FlexWeight: 1;
        Anchor: (Left: 10, Height: 28);
      }
    }

    Label #StockLabel {
      Style: (
        FontSize: 12,
        TextColor: #bfcdd5
      );
      Padding: (Bottom: 10);
    }

    Group {
      LayoutMode: Left;
      Anchor: (Height: 32);
      Padding: (Bottom: 10);

      $C.@SecondaryTextButton #MinusButton { Text: ""; Anchor: (Width: 36, Height: 28); }
      Label { Anchor: (Width: 10); }
      Label #AddCountText { Style: (FontSize: 12, TextColor: #ffffff); Anchor: (Width: 80, Height: 28); }
      Label { Anchor: (Width: 10); }
      $C.@SecondaryTextButton #PlusButton { Text: ""; Anchor: (Width: 36, Height: 28); }
      Label { FlexWeight: 1; }
      $C.@SecondaryTextButton #AddStockButton { Text: ""; Anchor: (Width: 160, Height: 28); }
    }

    Group {
      LayoutMode: Left;
      Anchor: (Height: 32);

      $C.@SecondaryTextButton #SaveButton { Text: ""; Anchor: (Width: 200, Height: 30); }
      Label { FlexWeight: 1; }
      $C.@CancelTextButton #RemoveButton { Text: ""; Anchor: (Width: 200, Height: 30); }
    }
  }
}

$C.@BackButton {}
